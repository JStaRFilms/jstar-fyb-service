// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Lead {
  id        String   @id @default(uuid())
  createdAt DateTime @default(now())
  
  whatsapp    String   @unique
  department  String
  topic       String   // The original idea
  twist       String   // The AI generated twist
  complexity  Int
  
  status      String   @default("NEW") // NEW, CONTACTED, SOLD
  userId      String?  // WorkOS User ID
  anonymousId String?  // Local Storage ID
}

model Conversation {
  id          String   @id @default(cuid())
  userId      String?  // WorkOS User ID (optional initially)
  anonymousId String?  // Local Storage ID for pre-auth tracking
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  messages    Message[]
  title       String? // Auto-generated summary
}


model Message {
  id             String       @id @default(cuid())
  conversationId String
  conversation   Conversation @relation(fields: [conversationId], references: [id], onDelete: Cascade)
  role           String       // 'user' | 'assistant'
  content        String
  createdAt      DateTime     @default(now())
}

model Project {
  id          String   @id @default(cuid())
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  userId      String?
  anonymousId String?

  topic       String
  twist       String?
  abstract    String?

  // Workflow fields
  mode             String  @default("DIY") // DIY, CONCIERGE
  status           String  @default("OUTLINE_GENERATED") // OUTLINE_GENERATED, RESEARCH_IN_PROGRESS, RESEARCH_COMPLETE, WRITING_IN_PROGRESS, PROJECT_COMPLETE
  assignedTo       String? // Admin user ID (for Concierge mode)
  
  // Legacy status flags (kept for backwards compat)
  isUnlocked       Boolean @default(false) // Has paid for full project
  outlineGenerated Boolean @default(false)

  // Relations
  documents   ResearchDocument[]
  outline     ChapterOutline?
  messages    ProjectMessage[]
}

model ResearchDocument {
  id          String   @id @default(cuid())
  projectId   String
  project     Project  @relation(fields: [projectId], references: [id], onDelete: Cascade)

  // File Info
  fileUrl     String?  // Optional: URL if linked externally
  fileData    Bytes?   // Optional: Binary data if uploaded directly
  mimeType    String?  // Required if fileData is present
  fileName    String
  fileType    String // e.g. "pdf"

  // Extraction Status
  status      String   @default("PENDING") // PENDING, PROCESSED, FAILED

  // Extracted Metadata (for "Human-in-the-Loop" / NotebookLM)
  title        String?
  author       String?
  year         String?
  objective    String?
  motivation   String?
  methodology  String?
  contribution String?
  limitations  String?

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model ChapterOutline {
  id        String   @id @default(cuid())
  projectId String   @unique
  project   Project  @relation(fields: [projectId], references: [id], onDelete: Cascade)
  
  content   String   // JSON or Markdown of the outline
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model ProjectMessage {
  id        String   @id @default(cuid())
  projectId String
  project   Project  @relation(fields: [projectId], references: [id], onDelete: Cascade)
  
  role      String   // "customer" | "admin"
  content   String
  
  createdAt DateTime @default(now())
}
